@model IEnumerable<StudentPortfolioSystem.Models.Department>
@{
    ViewBag.Title = "Departments";
}
<div class="container mt-4">
<h2>Departments</h2>
<h2 class="text-primary mb-3">Departments List</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<p>
        <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>
<table class="table table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr class="text-center">
                    <td>@department.Id</td>
                    <td>@department.DepartmentName</td>
                    <td>@department.Description</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this department?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
