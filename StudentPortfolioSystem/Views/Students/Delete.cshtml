@model StudentPortfolioSystem.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <h3 class="text-danger mb-4">Are you sure you want to delete this student?</h3>

    <div class="card p-4 shadow-sm">
        <p><strong>Name:</strong> @Model.StudentName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Major:</strong> @Model.Major</p>
        <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
