@model StudentPortfolioSystem.Models.Student

@{
    //ViewBag.Title = "Add New Student";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-person-plus"></i> Add New Student</h2>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StudentName" class="form-label fw-bold"></label>
                <input asp-for="StudentName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Major" class="form-label fw-bold"></label>
                <select asp-for="Major" class="form-select" asp-items="@(new SelectList(ViewBag.Majors??new List<object>()))">
                    <option value="">-- Select Major --</option>
                </select>
                <span asp-validation-for="Major" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="GraduationYear" class="form-label fw-bold"></label>
                <select asp-for="GraduationYear" class="form-select" asp-items="@(new SelectList(ViewBag.Years ?? new List<object>()))">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="GraduationYear" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="DepartmentId" class="form-label fw-bold">Department</label>
            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                <option value="">-- Select Department --</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label fw-bold"></label>
            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Write a short bio..."></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label fw-bold">Profile Image</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-save"></i> Save
            </button>

            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
