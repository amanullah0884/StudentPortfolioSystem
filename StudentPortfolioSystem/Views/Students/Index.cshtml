@model IEnumerable<StudentPortfolioSystem.Models.Student>

@{
    ViewBag.Title = "Students";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">All Students</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="bi bi-person-plus"></i> Add New Student
        </a>
    </p>

    <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Major</th>
                <th>Graduation Year</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var Student in Model)
                {
                    <tr>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(Student.ImagePath))
                            {
                                <img src="@Student.ImagePath" width="60" height="60" class="rounded-circle shadow-sm" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td>@Student.StudentName</td>
                        <td>@Student.Email</td>
                        <td>@Student.Major</td>
                        <td>@Student.GraduationYear</td>
                        <td>@Student.Department?.DepartmentName</td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@Student.Id" class="btn btn-info btn-sm me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@Student.Id" class="btn btn-warning btn-sm me-1 text-white">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Student.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this student?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No students found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
